<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.apz.workeronline.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.apz.workeronline.ui.tasks.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_taskFormFragment"
            app:destination="@id/taskFormFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_commentFormFragment"
            app:destination="@id/commentsFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment2" />
    </fragment>

    <fragment
        android:id="@+id/taskFormFragment"
        android:name="com.apz.workeronline.TaskFormFragment"
        android:label="fragment_task_form"
        tools:layout="@layout/fragment_task_form" >
    </fragment>

    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.apz.workeronline.ui.comments.CommentFragment"
        android:label="fragment_comment"
        tools:layout="@layout/fragment_comments" >
        <action
            android:id="@+id/action_commentsFragment_to_commentFormFragment"
            app:destination="@id/commentFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentFormFragment"
        android:name="com.apz.workeronline.CommentFormFragment"
        android:label="fragment_comment_form"
        tools:layout="@layout/fragment_comment_form" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.apz.workeronline.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_logsFragment"
            app:destination="@id/logsFragment" />
    </fragment>
    <fragment
        android:id="@+id/logsFragment"
        android:name="com.apz.workeronline.ui.logs.LogsFragment"
        android:label="fragment_logs"
        tools:layout="@layout/fragment_logs" />
    <fragment
        android:id="@+id/settingsFragment2"
        android:name="com.apz.workeronline.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>